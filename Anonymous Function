void main() {
  // Daftar nama yang hanya berisi nama FADHIL AKBAR
  List<String> names = ['FADHIL AKBAR'];

  // Menggunakan fungsi anonim untuk memfilter nama yang mengandung "FADHIL"
  var filteredNames = names.where((name) => name.contains('FADHIL')).toList();

  print('Nama yang mengandung "FADHIL":');
  filteredNames.forEach((name) {
    print(name); // Menampilkan nama yang mengandung "FADHIL"
  });

  // Menggunakan fungsi anonim untuk mengubah nama menjadi huruf kecil
  var lowerCaseNames = names.map((name) => name.toLowerCase()).toList();

  print('Nama dalam huruf kecil:');
  lowerCaseNames.forEach((name) {
    print(name); // Menampilkan nama dalam huruf kecil
  });
}
